---
const content = Astro.fetchContent('../../globals/footer-section.md')[0];
---

 <section class="text-gray-700 bg-white body-font">
  <div class="container flex flex-col px-8 py-8 mx-auto max-w-7xl sm:flex-row">
    <a href="/" class="text-xl font-black leading-none text-gray-900 select-none logo">buildmark<span class="text-green-500">.</span></a>
    <p class="mt-4 text-sm text-gray-500 sm:ml-4 sm:pl-4 sm:border-l sm:border-gray-200 sm:mt-0">{content.copyright_text}</p>
